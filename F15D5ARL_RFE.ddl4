create view F15D5Requestor_view as
SELECT 
    emp_id, 
    F15D5_Lab_lab_id,
    name,
    email,
    office,
    phone,
    active,
    status_eff_date,
    sys_admin_flag,
    lab_dir_flag,
    exec_dir_flag,
    chairperson_flag,
    F15D5_Auth_auth_id
FROM F15D5_emp where emp_id IN (SELECT F15D5_emp_emp_id FROM F15D5_RFE);

create view F15D5Lab_Dir_view as
SELECT 
    emp_id,
    F15D5_Lab_lab_id,
    name,
    email,
    office,
    phone,
    active,
    status_eff_date,
    sys_admin_flag,
    lab_dir_flag,
    exec_dir_flag,
    chairperson_flag,
    F15D5_Auth_auth_id
FROM F15D5_emp where lab_dir_flag = 'Y' ;

create or replace TRIGGER F15D5Lab_Dir_view
     INSTEAD OF insert ON F15D5Lab_Dir_view
     FOR EACH ROW
BEGIN
    insert into F15D5_emp( 
        emp_id, 
        F15D5_Lab_lab_id,
        name,
        email,
        office,
        phone,
        active,
        status_eff_date,
        sys_admin_flag,
        lab_dir_flag,
        exec_dir_flag,
        chairperson_flag,
        F15D5_Auth_auth_id)
    VALUES ( 
        :NEW.employee_id,
        :NEW.F15D5_Lab_lab_id,
        :NEW.name,
        :NEW.email,
        :NEW.office,
        :NEW.phone,
        :NEW.active,
        :NEW.status_eff_date,
        'N',
        'Y',
        'N',
        'N',
        :NEW.F15D5_Auth_auth_id,) ;
END;
/

