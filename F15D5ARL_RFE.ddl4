CREATE OR REPLACE TRIGGER update_status_history
  AFTER INSERT OR UPDATE ON F15D5_RFE
  FOR EACH ROW
BEGIN
    INSERT INTO F15D5_StatHis VALUES
    (hist_id.NEXTVAL, :new.rfe_id, :new.status_id, SYSDATE, v('P3_PERSON_CHANGED'));
END;
/

CREATE OR REPLACE TRIGGER add_new_comment
  AFTER INSERT OR UPDATE ON F15D5_RFE
  FOR EACH ROW
BEGIN
    INSERT INTO F15D5_Comments VALUES
    (comment_id.NEXTVAL, :new.rfe_id, v('P3_PERSON_CHANGED'), SYSDATE, v('P3_COMMENT_BOX'));
END;
/

CREATE OR REPLACE TRIGGER employees_before_update
BEFORE UPDATE ON F15D5_emp
FOR EACH ROW
BEGIN
  SELECT COUNT(*) as dir_count FROM F15D5_emp
  WHERE exec_dir_flag = true
  GROUP BY emp_id;
  IF dir_count >= 1 THEN
        RAISE_APPLICATION_ERROR(-2001, 'There cannot be more than one Executive Director.');
  END IF;

  SELECT COUNT(*) as chair_count FROM F15D5_emp
  WHERE chairperson_flag = true
  GROUP BY emp_id;
  IF chair_count >= 1 THEN
        RAISE_APPLICATION_ERROR(-2001, 'There cannot be more than one Chairperson.');
  END IF;
END;
/



